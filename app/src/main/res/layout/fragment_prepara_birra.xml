<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gestione_birra.PreparaBirraFragment">


    <TextView
        android:id="@+id/textView_nomePreparaBirra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="@string/nome_ricetta"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_listaIngredientiPreaparaBirra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="@string/ingredienti"
        android:textColor="?android:colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nomePreparaBirra" />

    <ListView
        android:id="@+id/listView_ingredrientiPreparaBirra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/button_ricettaPreparaBirra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_listaIngredientiPreaparaBirra" />

    <Button
        android:id="@+id/button_ricettaPreparaBirra"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="16dp"
        android:text="Prepara"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_numeroLitriPreparaBirra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/textView_listaIngredientiPreaparaBirra"
        app:layout_constraintStart_toEndOf="@+id/textView_listaIngredientiPreaparaBirra"
        app:layout_constraintTop_toTopOf="@+id/textView_listaIngredientiPreaparaBirra"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_LDiBirraPreparaBirra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="L di birra"
        android:textStyle="bold"
        android:textColor="?android:colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_numeroLitriPreparaBirra"
        app:layout_constraintStart_toEndOf="@+id/textView_numeroLitriPreparaBirra"
        app:layout_constraintTop_toTopOf="@+id/textView_numeroLitriPreparaBirra"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView_attrezzoPreparaBirra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:src="@drawable/tools"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_controloAttrezziPreparaBirra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_controloAttrezziPreparaBirra" />

    <ImageView
        android:id="@+id/imageView_controloAttrezziPreparaBirra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/check_circle_24px"
        app:layout_constraintEnd_toStartOf="@+id/imageView_attrezzoPreparaBirra"
        app:layout_constraintTop_toBottomOf="@+id/textView_nomePreparaBirra" />


</androidx.constraintlayout.widget.ConstraintLayout>