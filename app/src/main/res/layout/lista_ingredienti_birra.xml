<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView_ingrediente_birra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Acqua" />

    <TextView
        android:id="@+id/textView_unitaMisura_birra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="?android:textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_quantitaIngredienteBirra"
        app:layout_constraintStart_toEndOf="@+id/textView_quantitaIngredienteBirra"
        app:layout_constraintTop_toTopOf="@+id/textView_quantitaIngredienteBirra"
        tools:text="g" />

    <TextView
        android:id="@+id/textView_quantitaIngredienteBirra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        tools:text="32"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_ingrediente_birra"
        app:layout_constraintStart_toEndOf="@+id/textView_ingrediente_birra"
        app:layout_constraintTop_toTopOf="@+id/textView_ingrediente_birra" />

</androidx.constraintlayout.widget.ConstraintLayout>