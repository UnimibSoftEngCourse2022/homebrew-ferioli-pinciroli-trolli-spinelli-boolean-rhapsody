<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/editTextText_ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/textView_ingrediente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_ingrediente"
        tools:text="22.0"
        android:textColor="@color/md_theme_dark_onPrimary"/>


    <TextView
        android:id="@+id/textView_ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Acqua"
        android:textColor="@color/md_theme_dark_onPrimary"
        />

    <TextView
        android:id="@+id/textView_unitaMisura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText_ingrediente"
        app:layout_constraintStart_toEndOf="@+id/editTextText_ingrediente"
        app:layout_constraintTop_toTopOf="@+id/editTextText_ingrediente"
        tools:text="g"
        android:textColor="@color/md_theme_dark_onPrimary"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/button_rimuovi_ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:src="@drawable/baseline_horizontal_rule_24"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText_ingrediente"
        app:layout_constraintEnd_toStartOf="@+id/editTextText_ingrediente"
        app:layout_constraintTop_toTopOf="@+id/editTextText_ingrediente"
        tools:contentDescription="bottone -" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/button_aggiungi_ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText_ingrediente"
        app:layout_constraintStart_toEndOf="@+id/textView_unitaMisura"
        app:layout_constraintTop_toTopOf="@+id/editTextText_ingrediente"
        tools:contentDescription="bottone +" />


</androidx.constraintlayout.widget.ConstraintLayout>