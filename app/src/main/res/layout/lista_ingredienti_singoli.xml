<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal">


    <EditText
        android:id="@+id/editTextText_ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:maxLength="5"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton_rimuovi_ingrediente"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="22.0" />


    <TextView
        android:id="@+id/textView_ingrediente"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Acqua" />

    <TextView
        android:id="@+id/textView_unitaMisura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextText_ingrediente"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="g" />

    <ImageButton

        android:id="@+id/imageButton_rimuovi_ingrediente"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/bottone_meno"
        android:src="@drawable/baseline_horizontal_rule_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_ingrediente"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/roundcorner"/>

    <ImageButton

        android:id="@+id/imageButton_aggiungi_ingrediente"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:contentDescription="@string/bottone_piu"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton_rimuovi_ingrediente"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/roundcorner"/>


</androidx.constraintlayout.widget.ConstraintLayout>